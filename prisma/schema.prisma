generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  /// Field referred in an index, but found no data to define the type.
  email Json?  @unique
}

model Center {
  id        String   @id @map("_id")
  contact   String
  createdAt DateTime @db.Date
  name      String
  updatedAt DateTime @db.Date
}

model Center_Member {
  id             String   @id @map("_id")
  address        String
  baptism        Boolean
  birthDate      String
  centerId       String
  createdAt      DateTime @db.Date
  email          String   @unique
  firstName      String
  gender         String
  hashedPassword String
  lastName       String
  phone          String
  postalCode     String
  title          String
  updatedAt      DateTime @db.Date
}

model Convert {
  id             String   @id @map("_id")
  centerId       String
  createdAt      DateTime @db.Date
  email          String   @unique
  firstName      String
  gender         String
  hashedPassword String
  lastName       String
  phone          String
  updatedAt      DateTime @db.Date
}

model Secretary {
  id             String   @id @map("_id")
  centerId       String
  createdAt      DateTime @db.Date
  email          String   @unique
  firstName      String
  hashedPassword String
  lastName       String
  updatedAt      DateTime @db.Date
}

model Spiritual_leader {
  id             String   @id @map("_id")
  centerId       String
  createdAt      DateTime @db.Date
  email          String   @unique
  firstName      String
  gender         String
  hashedPassword String
  lastName       String
  phone          String
  updatedAt      DateTime @db.Date
}
